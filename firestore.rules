rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- HELPERS ----------
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // NOTE: Your current definition allows ANY logged-in user to be an admin.
      // You should eventually change this to check a specific UID or role.
      return isAuthenticated();
    }
    
    match /refunds/{refundId} {
       allow read, write: if request.auth != null; 
    }

    // ---------- PUBLIC READ ----------
    match /products/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /workshops/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /gallery/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /best_sellers/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ---------- PUBLIC FORMS ----------
    match /custom_orders/{docId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /corporate_inquiries/{docId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /contact_inquiries/{docId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /subscribers/{docId} {
      allow create: if true;
      allow update: if true; 
      allow read, delete: if isAdmin();
    }

    // ---------- USER DATA + SUBCOLLECTIONS ----------
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /wishlists/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /carts/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // ---------- ORDERS (FIXED FOR RAZORPAY API) ----------
    match /orders/{orderId} {
      // Allow read/update if document has a razorpayOrderId (Allows API to find & verify)
      allow read: if isAuthenticated() || (resource.data.razorpayOrderId != null);
      allow create: if true;
      allow update: if isAdmin() || (resource.data.razorpayOrderId != null && request.resource.data.status == 'completed');
    }

    // ---------- BOOKINGS ----------
    match /bookings/{bookingId} {
      allow create: if true;
      allow read: if isAuthenticated();
      allow write, update: if isAdmin();
    }
  }
}
